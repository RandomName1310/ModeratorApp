<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ModeratorApp"
             x:Class="ModeratorApp.MainPage"
             Title="MainPage"
             BackgroundColor="#262626">

    <ScrollView>
        <Grid x:Name="MainGrid">
            <VerticalStackLayout x:Name="EventStackLayout" Padding="10">
                <Label Text="Eventos disponíveis:"
                       HorizontalOptions="Center"
                       FontAttributes="Bold"
                       FontSize="30"
                       TextColor="White" />
                <HorizontalStackLayout  VerticalOptions="Start" HorizontalOptions="End" Spacing="10">
                    <Button x:Name="AddEventButton"
                            BackgroundColor="Green"
                            Text="Adicionar Evento"
                            TextColor="White"
                            FontSize="15"
                            BorderWidth="2"
                            BorderColor="White"
                            Clicked="AddEvent"/>
                    <Button x:Name="ManageRoleButton"
                            BackgroundColor="Red"
                            Text="Gerenciar papéis"
                            TextColor="White"
                            FontSize="15"
                            BorderWidth="2"
                            BorderColor="White"
                            Clicked="ManageRole"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>