<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ModeratorApp.EventForm"
             BackgroundColor="Transparent">

    <Grid BackgroundColor="#80000000"
          HorizontalOptions="Fill"
          VerticalOptions="Fill">
        <Grid HorizontalOptions="Center"
                  VerticalOptions="Center"
                  ColumnDefinitions="Auto,Auto"
                  ColumnSpacing="20">


            <!-- Left Border -->
            <Border Grid.Column="0"
                        Padding="20"
                        Stroke="White"
                        StrokeThickness="3"
                        StrokeShape="RoundRectangle 20"
                        BackgroundColor="#1C1C1C"
                        WidthRequest="300"
                        HeightRequest="450">
                <VerticalStackLayout x:Name ="RoleStack" Spacing="10">
                    <Label Text="Papéis adicionados:"
                           TextColor="White"
                           VerticalOptions="Start"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Border>

            <!-- Right Border -->
            <Border Grid.Column="1"
                        Padding="20"
                        Stroke="White"
                        StrokeThickness="3"
                        StrokeShape="RoundRectangle 20"
                        BackgroundColor="#1C1C1C"
                        WidthRequest="300"
                        HeightRequest="450">

                <Grid RowDefinitions="Auto,*,Auto">

                    <!-- Close Button -->
                    <Button Text="X"
                                BackgroundColor="Red"
                                TextColor="White"
                                CornerRadius="20"
                                BorderColor="White"
                                BorderWidth="2"
                                WidthRequest="40"
                                HeightRequest="40"
                                HorizontalOptions="End"
                                VerticalOptions="Start"
                                Clicked="OnCloseClicked"/>

                    <!-- Scrollable Content -->
                    <ScrollView Grid.Row="1">
                        <VerticalStackLayout Spacing="15"
                                                 HorizontalOptions="Fill"
                                                 VerticalOptions="Start">

                            <Label Text="Adicionar Evento"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       TextColor="White"/>

                            <Entry Placeholder="Event Name"
                                       x:Name="NameEntry"
                                       TextColor="Black"
                                       BackgroundColor="#F5F5F5"
                                       HeightRequest="40"/>

                            <Entry Placeholder="Event Description"
                                       x:Name="DescriptionEntry"
                                       TextColor="Black"
                                       BackgroundColor="#F5F5F5"
                                       HeightRequest="40"/>

                            <Entry Placeholder="Date (AAAA-MM-DD HH:MM:SS)"
                                       x:Name="DateEntry"
                                       TextColor="Black"
                                       BackgroundColor="#F5F5F5"
                                       HeightRequest="40"/>

                            <Entry Placeholder="Link"
                                       x:Name="LinkEntry"
                                       TextColor="Black"
                                       BackgroundColor="#F5F5F5"
                                       HeightRequest="40"/>

                            <Picker x:Name="RolePicker"
                                    Title="Escolha quais papéis adicionar"
                                    SelectedIndexChanged="OnRolePickerChange">
                                <Picker.Items>
                                    <x:String>Option 1</x:String>
                                    <x:String>Option 2</x:String>
                                    <x:String>Option 3</x:String>
                                </Picker.Items>
                            </Picker>
                            <Label/>
                        </VerticalStackLayout>
                    </ScrollView>

                    <!-- Add Button -->
                    <Button Grid.Row="2"
                                Text="Add"
                                BackgroundColor="#4CAF50"
                                TextColor="White"
                                CornerRadius="10"
                                HeightRequest="45"
                                Clicked="AddEventCard"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</ContentView>
