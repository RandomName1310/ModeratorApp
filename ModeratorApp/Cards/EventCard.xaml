<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ModeratorApp.Cards.EventCard">

    <!-- STYLE -->
    <ContentView.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Text" Value="Abrir Evento"/>
            <Setter Property="TextColor" Value="Black"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="WidthRequest" Value="200"/>
            <Setter Property="Margin" Value="0,-20,0,0"/>
        </Style>

        <Style x:Key="BorderStyle" TargetType="Border">
            <Setter Property="Stroke" Value="Black"/>
            <Setter Property="StrokeThickness" Value="2"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="HeightRequest" Value="110"/>
        </Style>

        <Style x:Key="MainText" TargetType="Label">
            <Setter Property="TextColor" Value="Black"/>
            <Setter Property="FontSize" Value="30"/>
        </Style>

        <Style x:Key="DateText" TargetType="Label">
            <Setter Property="TextColor" Value="Black"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
    </ContentView.Resources>

    <Border x:Name="RootBorder"
        Style="{StaticResource BorderStyle}"
        AutomationId="{Binding name}"
        BackgroundColor="{Binding color}">

        <VerticalStackLayout>
            <Label HorizontalOptions="Start"
                   Style="{StaticResource MainText}"
                   Text="{Binding name}"/>
            <Label HorizontalOptions="Start"
                   VerticalOptions="End"
                   Style="{StaticResource DateText}"
                   Text="{Binding date_time}"/>
            <HorizontalStackLayout Grid.Row="1"
                       HorizontalOptions="End"
                       VerticalOptions="End"
                       Spacing="10">
                <Button Style="{StaticResource ButtonStyle}"
                        Text="Exibir"
                        BackgroundColor="Green"
                        Clicked="ViewEvent"/>
                <Button Style="{StaticResource ButtonStyle}"
                        Text="Remove"
                        BackgroundColor="Red"
                        Clicked="RemoveEvent"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Border>
</ContentView>
