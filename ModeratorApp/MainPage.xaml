<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ModeratorApp"
             x:Class="ModeratorApp.MainPage"
             Title="MainPage">

    <ScrollView>
        <Grid x:Name="MainGrid">
            <VerticalStackLayout x:Name="EventStackLayout" Padding="10">
                <Label Text="Eventos disponíveis:"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"
                   FontSize="30"
                   TextColor="White" />
                <Button x:Name="AddEventButton"
                    BackgroundColor="Green"
                    Text="+"
                    TextColor="White"
                    FontSize="50"
                    WidthRequest="70"
                    HeightRequest="70"
                    BorderWidth="2"
                    BorderColor="White"
                    Clicked="AddEvent"
                    VerticalOptions="Start"
                    HorizontalOptions="End"/>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>